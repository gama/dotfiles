#!/bin/sh

SCREEN_ENVVARS=${HOME}/.xsession.env
printf 'export DISPLAY=%s\n' $DISPLAY >| ${SCREEN_ENVVARS}
printf 'export SESSION_MANAGER=%s\n' $SESSION_MANAGER >> ${SCREEN_ENVVARS}
printf 'export GNOME_KEYRING_SOCKET=%s\n' $GNOME_KEYRING_SOCKET >> ${SCREEN_ENVVARS}
printf 'export SSH_AUTH_SOCK=%s\n' $SSH_AUTH_SOCK >> ${SCREEN_ENVVARS}
printf 'export DBUS_SESSION_BUS_ADDRESS=%s\n' $DBUS_SESSION_BUS_ADDRESS >> ${SCREEN_ENVVARS}
